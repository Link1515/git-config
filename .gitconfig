[core]
    autocrlf = input
    excludesFile = ~/.gitignore
[column]
    ui = auto
[branch]
    sort = -committerdate
[pull]
    rebase = true
    ff = only
[merge]
	ff = only
[advice]
	diverging = false
[alias]
    msg = "!f(){ if git diff --cached --quiet; then echo 'No staged changes.'; return 1; fi; msg=$(git diff --cached | gemini -m 'gemini-2.5-flash-lite' -p 'Output exactly one single-line Conventional Commits message with no scope and no extra text. Format: <type>: <subject>. Allowed types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert. Subject: imperative, lowercase, <=72 chars, no trailing period, no newline.' 2>/dev/null); echo \"$msg\"; }; f"
    cm = commit -m
    cmp = commit --amend -C HEAD
    co = checkout
    pushf = push --force-with-lease
    sh = stash
    st = status
    sts = status -s
    br = branch
    ll = log --pretty=format:'%C(yellow)%h%C(reset) %ad [%C(cyan)%an%C(reset)]%C(yellow)%d%C(reset) %s %C(green)(%cr)%C(reset)' --date=short
    lg = log --graph --pretty=format:'%C(yellow)%h%C(reset) %ad [%C(cyan)%an%C(reset)]%C(yellow)%d%C(reset) %s' --abbrev-commit --date=short
    alias = config --get-regexp ^alias\\.
    iac = "!giac() { git init && git add . && git commit -m 'Initial commit' ;}; giac"
    ac = "!git add . && git commit -m"
    rc = "!grc() { git reset --hard && git clean -fd ;}; read -p 'Do you want to run the following commands:\ngit reset --hard && git clean -fd\n\n(Y/N) ' answer && [[ $answer == [Yy] ]] && grc"
    pr = "!gpr() { remote=${2:-origin}; git fetch "$remote" "pull/$1/head:pr-$1" && git checkout "pr-$1"; }; gpr"
